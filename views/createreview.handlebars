<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{User.username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Write your review!</h3>

    <form class="form new-review-form">
      <div class="form-group">
        <label for="movie-title">Movie Title</label>
        <input class="form-input" type="text" id="movie-title" name="movie-title" />
      </div>
      <div class="form-group">
        <label for="post-review">Review:</label>
        <input class="form-input" type="text" id="post-review" name="post-review" />
      </div>
      <div class="form-group">
        <label for="movie-rating">rating</label>
        <select id="movie-rating" class="star-rating">
          <option value="">Select a rating</option>
          <option value="5">Excellent</option>
          <option value="4">Very Good</option>
          <option value="3">Average</option>
          <option value="2">Poor</option>
          <option value="1">Terrible</option>
        </select>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if review.length}}
  <div class="col-md-6 review-list">
    <h3>Reviews!!!</h3>

    {{#each reviews as |review|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/Review/{{review.id}}">{{review.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{review.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}

  </div>
  {{/if}}
</div>

